<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemarkPage.Views.Remark">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>
            <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="#B2A3A3" Opacity="1" CornerRadius="10">
            </BoxView>
            <Label Grid.Row="0" Grid.Column="1" Text="Xamarin Forms!" 
                   TextColor="Black" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Grid>
    </ContentView.Content>
</ContentView>
