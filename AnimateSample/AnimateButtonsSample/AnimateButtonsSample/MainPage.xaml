<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimateButtonsSample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Button x:Name="translateButton" Text="Translation" 
            BackgroundColor="#f25022" TextColor="Black" FontSize="20" CornerRadius="15" Clicked="translateButton_Clicked"/>

            <Button x:Name="scaleButton" Text="Scale Me" 
            BackgroundColor="#7fba00" TextColor="White" FontSize="20" CornerRadius="15" Clicked="scaleButton_Clicked" />

            <Button x:Name="rotateButton" Text="Rotate It" 
            BackgroundColor="#00a4ef" TextColor="Black" FontSize="20" CornerRadius="15" Clicked="rotateButton_Clicked"/>

            <Button x:Name="fadeButton" Text="Fade" 
            BackgroundColor="#ffb900" TextColor="Black" FontSize="20" CornerRadius="15" Clicked="fadeButton_Clicked"/>

            <Button x:Name="submitDark" Text="Kaydet" 
            BackgroundColor="#141414" TextColor="White" FontSize="20" CornerRadius="10" Clicked="submitDark_Clicked" />
        
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
